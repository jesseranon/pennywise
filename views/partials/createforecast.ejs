<div class="container">
  <div class="row justify-content-center mt-5">
    Create a Forecast
    <form action="" method="post">
      <!-- Type -->
      <p>
        <label for="accountingType">Are you expecting to pay a bill or get paid?</label>
        <select name="accountingType" id="accountingType">
          <option value="debit">
            Get paid
          </option>
          <option value="credit">
            Pay a bill
          </option>
        </select>
      </p>
      
      
      <!-- Transaction Amount -->
      <p>
        <label for="amount">
          How much?
        </label>
        <input type="number" step="0.01" min="0" name="amount" id="amount" placeholder="00.00">
      </p>
      
      <!-- Category -->
      <p>
        <label for="category">
          Who's paying you or who are you paying?
        </label>
        <input type="text" name="category" id="category" list="categories">
        <datalist id="categories">
          <% if (user.payees.length > 0) { %>
            <% for (let i = 0; i < user.payees.length; i++) { %>
              <option value="<%= user.categories[i] %>">
            <% } %>
          <% } %>
        </datalist>
      </p>

      <!-- Date -->

      <p>
        <label for="date">
          When is this going to happen?
        </label>
      </p>
      <input type="date" name="date" id="date">

      <button type="submit" class="btn btn-primary">
        Submit
      </button>
    </form>
  </div>
</div>